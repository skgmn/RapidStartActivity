<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <Button
            android:id="@+id/requestPermissionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="@{() -> viewModel.acquirePermissions()}"
            android:text="@string/grant_permissions"
            android:textSize="13sp"
            android:visibility="@{permissionsStatus != PermissionStatus.DO_NOT_ASK_AGAIN ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/permissionGuideText" />

        <TextView
            android:id="@+id/permissionGuideText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="@string/permissions_required"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/requestPermissionButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <data>

        <import type="android.view.View" />

        <import type="com.github.skgmn.rapidstartactivity.PermissionStatus" />

        <variable
            name="permissionsStatus"
            type="com.github.skgmn.rapidstartactivity.PermissionStatus" />

        <variable
            name="viewModel"
            type="com.github.skgmn.rapidstartactivity.sample.camera.CameraPermissionOverlayViewModel" />

    </data>

</layout>